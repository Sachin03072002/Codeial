<link rel="stylesheet" href="/css/home.css">
<div id="home-container">
<section id="feed-post">
    <h4>Posts</h4>
    <!-- //making the form visible only when the user is logged in -->
    <% if(locals.user) {%>
    <form action="/posts/create" id="new-post-form" method="Post">
        <textarea name="content" cols="30" rows="3"></textarea>
        <input type="submit" value="Post" placeholder="Type here...." required>
    </form>
    <% } %>
    <div id="posts-list-container">
        <ul>
            <% for(post of posts) {%> 
                <%- include('_post') -%>
                 
            <% } %>
        </ul>
    </div>
</section>

<section id="users-friends">
    <h4>Friends</h4>
    <% for(u of all_users){%>
        <p>
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
        </p>
    <% } %>
</section>
</div>


<script src="/js/home_post.js"></script>
<script src="/js/home_comment.js"></script>

