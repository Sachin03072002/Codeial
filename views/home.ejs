
<h1>
    Codeial / <%= title %>
</h1>
<section id="feed-post">
    <h4>Posts</h4>
    <!-- //making the form visible only when the user is logged in -->
    <% if(locals.user) {%>
    <form action="/posts/create" id="new-post-form" method="Post">
        <textarea name="content" cols="30" rows="3"></textarea>
        <input type="submit" value="Post" placeholder="Type here...." required>
    </form>
    <% } %>
    <div id="posts-list-container">
        <ul>
            <% for(post of posts) {%> 
                <%- include('_post') -%>
                 
            <% } %>
        </ul>
    </div>
</section>
